<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Appdemo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_sky</item>
        <item name="colorPrimaryVariant">@color/maximum_blue</item>
        <item name="colorOnPrimary">@color/outer_space_crayola</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_crayola</item>
        <item name="colorSecondaryVariant">@color/orange_crayola</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/orange_crayola</item>
        -->
        <!-- Customize your theme here.
        <item name="android:button">@null</item> -->
        <item name="materialCalendarTheme">@style/ThemeMaterialCalendar</item>
    </style>

    <style name="ThemeMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="buttonBarPositiveButtonStyle">@style/ThemeMaterialCalendarButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ThemeMaterialCalendarButton</item>
        <item name="materialButtonStyle">@style/ThemeMaterialCalendarTextButton</item>
    </style>

    <style name="ThemeMaterialCalendarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/prussian_blue</item>
    </style>

    <style name="ThemeMaterialCalendarTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/space_cadet</item>
        <item name="iconTint">@color/honey_yellow</item>
    </style>

    <style name="card_module" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/dark_jungle_green</item>
        <item name="colorOnSecondary">@color/space_cadet</item>
        <item name="colorOnError">@color/imperial_red</item>
        <item name="materialCardViewStyle">@style/card</item>
        <item name="thumbTint">@drawable/toggle_thumb_module_selector</item>
        <item name="trackTint">@drawable/toggle_track_module_selector</item>
        <item name="android:tint">@color/scarlet</item>

    </style>


    <style name="card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/prussian_blue</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.SmallComponent</item>

    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">20dp</item>
        <item name="cornerSize">8dp</item>

    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>