<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".common.modulo.NewModuloFragment"
    android:background="@color/white">



    <TextView
        android:id="@+id/new_module_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_module"
        android:textColor="@color/orange"
        android:gravity="center"
        android:textSize="25dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:fontFamily="@font/muli_light"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"/>


    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/module_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:layout_gravity="left"/>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="right">

            <!--TODO resolve width and place 2 arrows up and down for click-->
            <com.google.android.material.tabs.TabLayout
                android:rotation="90"
                app:tabIndicatorHeight="2dp"
                android:id="@+id/module_tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                app:tabGravity="center"
                android:layout_margin="0dp"
                android:padding="0dp"
                app:tabRippleColor="@color/honey_yellow"
                app:tabIconTintMode="src_in"
                app:tabIconTint="@color/honey_yellow"
                app:tabIndicatorColor="@color/honey_yellow"
                />

        </RelativeLayout>










