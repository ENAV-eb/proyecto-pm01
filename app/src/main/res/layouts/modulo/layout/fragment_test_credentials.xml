<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.modulo.TestCredentialsFragment"
    android:paddingLeft="30dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingRight="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/url_service"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:hintTextColor="@color/prussian_blue"
        app:boxStrokeColor="@color/prussian_blue"
        app:startIconDrawable="@drawable/ic_baseline_create_24"
        app:startIconTint="@color/blue_green"
        android:textColorHint="@color/blue_green"
        app:boxStrokeWidthFocused="2dp"
        app:counterTextColor="@color/prussian_blue"
        android:paddingBottom="@dimen/icon_4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/url_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/prussian_blue"
            android:textColorHint="@color/prussian_blue"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/usr_service"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:hintTextColor="@color/prussian_blue"
        app:boxStrokeColor="@color/prussian_blue"
        app:startIconDrawable="@drawable/ic_baseline_create_24"
        app:startIconTint="@color/blue_green"
        android:textColorHint="@color/blue_green"
        app:boxStrokeWidthFocused="2dp"
        app:counterTextColor="@color/prussian_blue"
        android:paddingBottom="@dimen/icon_4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usr_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/prussian_blue"
            android:textColorHint="@color/prussian_blue"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/light_cornflower_blue"
                app:hintTextColor="@color/prussian_blue"
                app:boxStrokeColor="@color/prussian_blue"
                app:startIconDrawable="@drawable/ic_outline_lock_24"
                app:startIconTint="@color/blue_green"
                android:textColorHint="@color/blue_green"
                app:boxStrokeWidthFocused="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textColor="@color/prussian_blue"/>

    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_test_credential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_credential"
            android:textColor="@color/white"
            android:backgroundTint="@color/scarlet"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:elevation="5dp"/>

    </LinearLayout>
</FrameLayout>